<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefbf8"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:contentDescription="Layout of main home page">

            <!-- Intro Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/intro_page"
                android:contentDescription="Introduction image for home page" />

            <!-- Intro Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/solway_regular"
                android:gravity="center"
                android:padding="5dp"
                android:text="What little treasure are you looking for today?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="normal" />

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="12dp">
                <include layout="@layout/search_bar" />
            </LinearLayout>

            <!-- Pick for You Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#fbf0e8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Picks for You"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/solway_regular" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pickForYouRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/picks_item"
                        android:contentDescription="Horizontally list of recommended items"/> </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Category Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#fbf0e8"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Category Title -->
                    <TextView
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/solway_regular"
                        android:layout_marginBottom="16dp"/>

                    <!-- Electronics & Gadgets -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="@android:color/transparent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/electronicsButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/gadgets"
                                android:scaleType="centerCrop"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Electronics and gadgets category"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#80000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Electronics and Gadgets"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/solway_regular"
                                android:textStyle="bold"
                                android:layout_gravity="top|start"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:padding="8dp"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Clothing & Accessories -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="@android:color/transparent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/clothingButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/clothes"
                                android:scaleType="centerCrop"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Clothing and accessories category"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#80000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clothing and Accessories"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/solway_regular"
                                android:textStyle="bold"
                                android:layout_gravity="top|start"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:padding="8dp"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Home & Decor -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="@android:color/transparent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/homeDecorButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/decor"
                                android:scaleType="centerCrop"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Home and decor category"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#80000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home and Decor"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/solway_regular"
                                android:textStyle="bold"
                                android:layout_gravity="top|start"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:padding="8dp"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Books, Toys & Collectables -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="@android:color/transparent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/booksToysButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/books"
                                android:scaleType="centerCrop"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Books, toys and collectables category"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#80000000"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Books, Toys and Collectables"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="@font/solway_regular"
                                android:textStyle="bold"
                                android:layout_gravity="top|start"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:padding="8dp"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>


